@page "/element/{Number:int}"
@using UCR.ECCI.PI.ThemePark.Frontend.Blazor.Presentation.Models

<PageTitle>Elemento @Number</PageTitle>

<h3>Detalles del elemento @Number</h3>

@if (element is not null)
{
    <ul>
        <li><strong>Name:</strong> @element.Name</li>
        <li><strong>Sign:</strong> @element.Sign</li>
        <li><strong>Position:</strong> @element.Position</li>
        <li><strong>Molar mass:</strong> @element.Molar</li>
    </ul>
}
else
{
    <p>Elemento no encontrado.</p>
}

@code {
    [Parameter]
    public int Number { get; set; }

    private Element? element;

    protected override void OnInitialized()
    {
        var elements = new List<Element>
        {
            new Element { Number = 1, Sign = "H", Name = "Hydrogen", Position = 1, Molar = 1.008 },
            new Element { Number = 2, Sign = "He", Name = "Helium", Position = 18, Molar = 4.0026 },
            new Element { Number = 3, Sign = "Li", Name = "Lithium", Position = 1, Molar = 6.94 },
        };

        element = elements.FirstOrDefault(e => e.Number == Number);
    }
}
