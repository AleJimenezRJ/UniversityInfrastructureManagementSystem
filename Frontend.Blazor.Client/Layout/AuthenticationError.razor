@page "/auth-error"

@inject NavigationManager Nav


@* Handles authentication errors, such as access denied *@ 

<MudContainer MaxWidth="MaxWidth.Small" Class="d-flex flex-column align-center justify-center mt-16">
    <MudPaper Elevation="4" Class="pa-6" Style="text-align: center;">
        <MudText Typo="Typo.h5" Color="Color.Error" Class="mb-2">Acceso Denegado</MudText>

        <MudText Typo="Typo.body1" Class="mb-4">
            Tu cuenta ha sido registrada correctamente, pero aún no tiene permisos asignados.<br />
            Por favor contactá a un administrador del sistema o salí para usar otra cuenta.
        </MudText>

        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@Logout">
            Cerrar sesión
        </MudButton>
    </MudPaper>
</MudContainer>

@code {
    private void Logout()
    {
        // Redirect to logout, then login
        Nav.NavigateTo("/logout?returnUrl=/login", forceLoad: true);
    }
}